<Window x:Class="IForPW12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IForPW12"
        mc:Ignorable="d"
        Title="PW12" Height="450" Width="320" ResizeMode="CanResize" Icon="icons\LogoIco.ico">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Действия">
                <MenuItem.Icon>
                    <Image Source="icons/SettingsOnWhiteIco.ico"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <GroupBox Header="Работа с радиусами"  MinHeight="238" Margin="35,34,25,147" MinWidth="248">
            <Grid>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Label Content="Первый радиус:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Label Content="Второй радиус:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Label Content="Первая площадь:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Label Content="Вторая площадь:" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Button Content="Найти площади кругов" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top" Width="212"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" IsReadOnly="True"/>
                <Label Content="Площадь кольца:" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top"/>
                <Button Content="Найти площадь кольца" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Width="212"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Работа с годами" HorizontalAlignment="Center" Height="129" Margin="37,277,27,13" VerticalAlignment="Center" Width="248">
            <Grid>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Label Content="Год:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Label Content="Столетие:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <TextBox HorizontalAlignment="Left" Height="23" Margin="117,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Button Content="Отобразить столетие" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="212"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
