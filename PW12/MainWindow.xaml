<Window x:Class="IForPW12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IForPW12"
        mc:Ignorable="d"
        Title="PW12" Height="466" Width="320" ResizeMode="CanResize" Icon="Icons\LogoIco.ico">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Действия">
                <MenuItem.Icon>
                    <Image Source="Icons/SettingsOnWhiteIco.ico"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>
        <ToolBar VerticalAlignment="Top" Margin="0,24,0,0" Height="24">
            <Button ToolTip="Отобразить столетие">
                <Image Source="/Icons/txt.ico"/>
            </Button>
            <Separator/>
            <Button x:Name="FindAllSquares" ToolTip="Найти площадь кругов и кольца" Click="FindAllSquares_Click">
                <Image Source="/Icons/FindItIco.ico"/>
            </Button>
            <Separator/>
        </ToolBar>
        <GroupBox Header="Работа с радиусами" HorizontalAlignment="Center" Height="238" VerticalAlignment="Top" Width="248" Margin="0,53,0,0">
            <Grid>
                <Label Content="Первый радиус:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="FirstRadius" HorizontalAlignment="Left" Height="23" Margin="117,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6" PreviewTextInput="FirstRadius_PreviewTextInput"/>
                <Label Content="Второй радиус:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="SecondRadius" HorizontalAlignment="Left" Height="23" Margin="117,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Label Content="Первая площадь:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="FirstSquare" HorizontalAlignment="Left" Height="23" Margin="117,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" IsReadOnly="True"/>
                <Label Content="Вторая площадь:" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="SecondSquare" HorizontalAlignment="Left" Height="23" Margin="117,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" IsReadOnly="True"/>
                <Button x:Name="FindSquaresOfCircles" Content="Найти площади кругов" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top" Width="212" Click="FindSquaresOfCircles_Click"/>
                <TextBox x:Name="SquareOfRing" HorizontalAlignment="Left" Height="23" Margin="117,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" IsReadOnly="True"/>
                <Label Content="Площадь кольца:" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top"/>
                <Button x:Name="FindSquareOfRing" Content="Найти площадь кольца" HorizontalAlignment="Left" Margin="10,185,0,0" VerticalAlignment="Top" Width="212" Click="FindSquareOfRing_Click"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Работа с годами" HorizontalAlignment="Center" Height="129" VerticalAlignment="Top" Width="248" Margin="0,296,0,0">
            <Grid>
                <Label Content="Год:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Year" HorizontalAlignment="Left" Height="23" Margin="117,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6"/>
                <Label Content="Столетие:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <TextBox x:Name="Centennial" HorizontalAlignment="Left" Height="23" Margin="117,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" MaxLength="6" IsReadOnly="True"/>
                <Button x:Name="DisplayCentennial" Content="Отобразить столетие" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="212" Click="DisplayCentennial_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
